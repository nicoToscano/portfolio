<style>
  .border-animation {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }

  .border-animation::before {
    content: "";
    position: absolute;
    width: 160%;
    height: 160%;
    /* background-image: conic-gradient(#ff0052 20deg, transparent 120deg); */
    background-image: conic-gradient(#4cb0ce 20deg, transparent 120deg);
    animation: rotate 10s linear infinite;
  }

  .border-animation::after {
    content: "";
    position: absolute;
    inset: 4px; /* Crea el espacio interno sin cubrir el borde */
    background: #171b1f;
    border-radius: 10px;
    z-index: 1; /* Asegura que el fondo no cubra el contenido */
  }

  .box__bg {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
  }

  .box__bg::before {
    content: "";
    position: absolute;
    width: 160%;
    height: 160%;
    background-repeat: no-repeat;
    background-size: 100%100%, 50%50%;
    background-position:
      0 0,
      100% 0,
      100% 100%,
      0 100%;
    background-image: linear-gradient(#7d71eb, #4cb0ce);
    animation: bgRotate 4s linear infinite;
  }

  .box__bg::after {
    content: "";
    position: absolute;
    inset: 4px;
    background: #171b1f;
    border-radius: 10px;
  }

  @keyframes bgRotate {
    100% {
      transform: rotate(1turn);
    }
  }

  /* Asegurar que el contenido esté por encima del fondo */
  .content {
    position: relative;
    z-index: 2;
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(-360deg);
    }
  }
</style>
