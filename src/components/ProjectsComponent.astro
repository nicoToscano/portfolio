---
import { Image } from "astro:assets";
import tesla from "../assets/tesla.png";
import coffee from "../assets/coffee.png";


const projects = [
  {
    title: "Tesla",
    description:
      "Desarrollo de una tienda con carrito de compras y pago integrado.",
    image: tesla,
    link: "https://nicotoscano.github.io/CoffeeShop/",
  },
  {
    title: "Coffee Shop",
    description:
      "Un dashboard para gestionar usuarios y productos con estad√≠sticas.",
    image: coffee,
    link: "https://nicotoscano.github.io/CoffeeShop/",
  },
];
---

<div
  class="flex flex-col items-center mx-auto px-6 md:px-10 lg:px-20 xl:px-32 py-10"
>
  <h2
    class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white mb-16 drop-shadow-lg"
  >
    Proyectos
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full">
    {
      projects.map((project) => (
        <div class="bg-gradient-to-r from-[#171b1f] to-[#19222b] p-8 md:p-10 rounded-2xl border border-white/30 shadow-lg transition-transform transform hover:shadow-[0_0_10px_rgba(255,255,255,0.5)]">
          <a
            href={project.link}
            class="block bg-[#19222b] p-6 rounded-xl shadow-lg transition-transform hover:scale-105"
          >
            <Image
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover rounded-lg mb-4"
            />
            <h3 class="text-xl font-semibold text-white">{project.title}</h3>
            <p class="text-gray-300 text-sm">{project.description}</p>
          </a>
        </div>
      ))
    }
  </div>
</div>
