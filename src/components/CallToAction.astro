---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a class="md:text-lg" href={href}><slot /></a>

<style>
	a {
		position: relative;
		display: flex;
		place-content: center;
		text-align: center;
		padding: 1.125rem 2.5rem;
		gap: 0.8em;
		color: var(--colorfont);
		font-weight: 700;
		text-decoration: none;
		line-height: 1.1;
		border-radius: 999rem;
		overflow: hidden;
		background: var(--colorbutton);
		white-space: nowrap;
	}		

	a:hover {
		border: 1px solid var(--colorborder);
	}

</style>
