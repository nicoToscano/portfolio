---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="portfolio/cohete.png" />
		<meta name="theme-color" content="#000000" />
		<title>{title}</title>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
	</head>
	<body>
		<slot />
		<script src="/portfolio/scripts/scroll-reveal.js" defer></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		font-family: "Nunito", sans-serif;
		background: linear-gradient(to bottom, var(--colorbackground), var(--colorbackground2));
	}

	body.no-scrollbar{
		overflow: hidden;
	}
</style>
